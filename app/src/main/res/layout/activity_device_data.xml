<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Timestamp -->
    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2025-08-02 12:01"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Change delta -->
    <EditText
        android:id="@+id/etChangeDelta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="+/-"
        android:inputType="numberSigned"
        android:singleLine="true"
        android:padding="6dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTimestamp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintBottom_toBottomOf="@+id/etReason"/>

    <!-- Reason -->
    <EditText
        android:id="@+id/etReason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Reason"
        android:singleLine="true"
        android:padding="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTimestamp"
        app:layout_constraintStart_toEndOf="@id/etChangeDelta"
        app:layout_constraintEnd_toStartOf="@id/button_group"
        app:layout_constraintBottom_toBottomOf="@+id/etChangeDelta"/>

    <!-- Save/Delete compact group -->
    <LinearLayout
        android:id="@+id/button_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvTimestamp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/etChangeDelta">

        <Button
            android:id="@+id/btnSaveLog"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="S"
            android:textAllCaps="false"
            android:contentDescription="Save"
            android:padding="0dp"
            android:minHeight="0dp"
            android:minWidth="0dp"/>

        <Button
            android:id="@+id/btnDeleteLog"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="D"
            android:textAllCaps="false"
            android:contentDescription="Delete"
            android:layout_marginStart="4dp"
            android:padding="0dp"
            android:minHeight="0dp"
            android:minWidth="0dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
