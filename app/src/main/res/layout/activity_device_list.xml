<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/device_list_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- Header -->
    <TextView
        android:id="@+id/tvDeviceListHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Devices"
        android:textSize="24sp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp" />

    <!-- RecyclerView of devices -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/device_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="80dp"
        android:clipToPadding="false"
        android:padding="4dp"
        android:layout_gravity="top"
        android:layout_weight="1" />

    <!-- Floating add -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Add device"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add" />

<!--    FIXME: added the botton for SMS Test-->
</androidx.coordinatorlayout.widget.CoordinatorLayout>
